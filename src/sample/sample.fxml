<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<StackPane fx:controller="sample.Controller"
           xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox alignment="CENTER" spacing="15">
        <HBox spacing="12">
            <TextField fx:id="firstNum" style="-fx-font-size: 14px;"/>
            <TextField fx:id="operation" style="-fx-font-size: 14px;"/>
            <TextField fx:id="secondNum" style="-fx-font-size: 14px;"/>
        </HBox>
        <Button onAction="#onSubmitButton">გამოთვლა</Button>
        <Label fx:id="result"/>
    </VBox>

</StackPane>